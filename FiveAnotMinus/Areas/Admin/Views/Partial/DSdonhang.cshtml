@model List<FiveAnotMinus.Models.DTO.DonHang_DTO>
@{
    ViewBag.Title = "_DSdonhang";
}
<div class="card-body table-responsive p-0" style="height: 300px;">
    <table class="table table-head-fixed text-nowrap">
        <thead>
            <tr>
                <th>STT</th>
                <th>Đơn hàng</th>
                <th>Thời gian giao</th>
                <th>Tình trạng đơn</th>
                <th>Tổng tiền</th>
                <th>Mã nhân viên</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Count > 0)
            {
                var i = 1;
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@i</td>
                        <td>@item.MaDH</td>
                        <td>@item.ThoiGianGiao</td>
                        <td>@item.TinhTrangDon</td>
                        <td>@item.Tien</td>
                        <td>@item.MaNV</td>
                        <td>
                        <td>
                            @*<a data-id="@item.MaDH" href="#editModal" class='btn btn-warning btnEdit'>Sửa</a>*@
                            <button data-bs-toggle="modal" data-bs-target="#editModal" class="btn btn-primary">Sửa</button>
                            | <a data-id="@item.MaDH" href='#' class='btn btn-danger btnDelete'>Xóa</a>
                        </td>
                        
                    </tr>
                    i++;
                }

            </tbody>
        }
        else
        {
            <tbody>
                <tr>
                    <td colspan="4">There are no records yet!!!</td>
                </tr>
            </tbody>
        }
        </table>
    </div>