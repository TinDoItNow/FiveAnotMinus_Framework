@model PagedList.IPagedList<FiveAnotMinus.Models.DTO.SanPham_DTO>
@using PagedList.Mvc;
@{
    ViewBag.Title = "_DSsanpham";
}
<div class="card-body table-responsive p-0" style="height: 650px;">
    <table class="table table-head-fixed text-nowrap">
        <thead>
            <tr>
                <th>STT</th>
                <th>Mã sản phẩm</th>
                <th>Tên sản phẩm</th>
                <th>Loại sản phẩm</th>
                <th>Giá</th>
                <th>Đơn vị tính</th>
                <th>Bảo hành</th>
                <th>Hình ảnh</th>
                <th style="text-align: center">
                    <button data-bs-toggle="modal" data-bs-target="#exampleModal">
                        <img src="~/Assets/Admin/img/add.png" alt="" />
                    </button>
                </th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Count > 0)
            {
                var i = 1;
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@i</td>
                        <td>@item.MaSP</td>
                        <td>@item.TenSP</td>
                        <td>@item.TenLoaiSP</td>
                        <td>@item.Gia</td>
                        <td>@item.DVT</td>
                        <td>@item.BaoHanh</td>
                        <td>
                            <img style="width:10rem;height:10rem" class="" src="@item.HinhAnh" alt="">
                        </td>
                        <td>
                            <button data-bs-toggle="modal" data-bs-target="#editModal" class='btn btn-primary'>Sửa</button>

                            | <a data-id="@item.MaSP" href='#' class='btn btn-danger btnDelete'>Xóa</a>
                        </td>
                    </tr>
                    i++;
                }

            </tbody>
        }
        else
        {
            <tbody>
                <tr>
                    <td colspan="4">There are no records yet</td>
                </tr>
            </tbody>
        }
        </table>
    <style>
        .pagination li {
            margin: 10px;
        }

        .pagination a {
            text-decoration: none;
            padding: 3px 5px;
            border: 1px solid black;
            border-radius: 50px;
        }

        .pagination .active a {
            background-color:cornflowerblue;
        }

        
    </style>

    @Html.PagedListPager(Model, page => Url.Action("Index","ProductManagement",new { page }))
    </div>